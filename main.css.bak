#wrapper {
    max-width: 600px;
    margin: auto;
}
iframe {
    display: block;
    width: 100%;
    border: none;
    background-color: #def;
    border-radius: 1em;
}
a {
    color: darkorange;
    text-decoration: none;
}
/* Ensure full width scaling for mobile devices */
@media (max-width: 768px) {
    header {
        font-size: 1.8rem; /* Slightly smaller font size on tablets */
        padding: 15px 10px; /* Adjust padding for smaller screens */
    }
}
@media (max-width: 480px) {
    header {
        font-size: 1.5rem; /* Further reduce font size for small mobile screens */
        padding: 10px 8px; /* Compact padding for small screens */
    }
}